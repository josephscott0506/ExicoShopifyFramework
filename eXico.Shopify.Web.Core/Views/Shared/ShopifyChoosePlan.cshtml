@using Exico.Shopify.Data.Domain.AppModels
@model List<PlanAppModel>
@await Html.PartialAsync(this.GetViews().Shopify.ChoosePlanRenderingCss)
@inject IDbSettingsReader setting

<div class="row" @this.PrintViewNameAttr()>
    <div class="col-lg-12">
        <h2>Choose a monthly subscription plan</h2>
    </div>
 
    <div class="col-lg-12 ">
        <br/>
        @if (Model.Count > 0)
        {
            @foreach (var p in Model)
            {
                @await Html.PartialAsync(this.GetViews().Shopify.ChoosePlanRenderer, p);
            }
        }
        else
        {
            <div class="alert alert-warning">There are no plans that can be listed. Please contact support at <a class="label label-info " style="font-size:12px;padding:5px" href="mailto:@setting.GetAppSupportEmailAddress()"> @setting.GetAppSupportEmailAddress()</a>.</div>
        }
    </div>
</div>
